---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
:root{--a:#08CB00;--b:#10E000;--c:#ddd;--d:#000;--e:#333}*{margin:0;padding:0;box-sizing:border-box}html{font-family:Monaco,'Courier New',monospace;background:var(--d);color:var(--c)}body{min-height:100vh;padding:2rem;line-height:1.6}h1,h2,h3{color:var(--a);margin:1.5rem 0 1rem}h1{font-size:2rem;margin-bottom:.5rem}h2{font-size:1.5rem}h3{font-size:1.2rem}p{margin:1rem 0}blockquote{border-left:3px solid var(--a);padding-left:1rem;margin:1rem 0;font-style:italic;color:#aaa}ul{margin:1rem 0 1rem 2rem}.x{max-width:900px;margin:0 auto}.y{color:var(--a);font-size:.9rem;margin-bottom:.5rem;text-transform:uppercase;letter-spacing:1px}.z{margin-top:3rem;padding-top:2rem;border-top:1px solid var(--e)}.z:first-of-type{margin-top:2rem;border-top:none;padding-top:0}.z h2{color:var(--b);font-size:1.2rem;margin-bottom:1rem}
</style>
